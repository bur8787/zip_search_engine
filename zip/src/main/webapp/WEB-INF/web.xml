<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<param-name>db.url</param-name>
		<param-value>jdbc:h2:~/test</param-value>
	</context-param>
	<context-param>
		<param-name>db.user</param-name>
		<param-value>sa</param-value>
	</context-param>
	<context-param>
		<param-name>db.password</param-name>
		<param-value></param-value>
	</context-param>
	<context-param>
		<param-name>db.tcpServer</param-name>
		<param-value>-tcpAllowOthers</param-value>
	</context-param>
	<servlet>
		<servlet-name>SearchController</servlet-name>
		<servlet-class>jp.suzutt.zip_search_engine.controller.SearchController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DefaultController</servlet-name>
		<servlet-class>jp.suzutt.zip_search_engine.controller.DefaultController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EntryController</servlet-name>
		<servlet-class>jp.suzutt.zip_search_engine.controller.EntryController</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>SystemPrintController</display-name>
		<servlet-name>SystemPrintController</servlet-name>
		<servlet-class>jp.suzutt.zip_search_engine.controller.SystemPrintController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SearchController</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EntryController</servlet-name>
		<url-pattern>/entry</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DefaultController</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SystemPrintController</servlet-name>
		<url-pattern>/system/print</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>org.h2.server.web.DbStarter</listener-class>
	</listener>
</web-app>